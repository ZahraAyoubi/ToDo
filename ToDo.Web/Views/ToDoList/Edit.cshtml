@model ToDo.Web.Models.ToDoListDto

    <form asp-action="EditToDo">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Edit ToDo</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="col-2">
                <label asp-for="Date" class="control-label pt-2" style="font-size:20px;">Create date</label>
            </div>
            <div class="col-10 pb-3">
                <input type ="datetime-local" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="IsCompelete" class="control-label pt-2" style="font-size:20px;">Completion</label>
            </div>
            <div class="col-10 pb-3">
                <input type="checkbox" asp-for="IsCompelete" />
                <span asp-validation-for="IsCompelete" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="BackToList" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
    </form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

